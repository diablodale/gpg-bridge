{
  "name": "gpg-bridge-request",
  "displayName": "GPG Bridge Request",
  "description": "Remote request proxy component for GPG Bridge",
  "version": "0.2.0",
  "icon": "icon.png",
  "preview": true,
  "publisher": "hidale",
  "author": {
    "name": "Dale Phurrough"
  },
  "license": "MIT",
  "homepage": "https://github.com/diablodale/gpg-bridge",
  "repository": {
    "type": "git",
    "url": "https://github.com/diablodale/gpg-bridge.git"
  },
  "qna": false,
  "bugs": {
    "url": "https://github.com/diablodale/gpg-bridge/issues"
  },
  "galleryBanner": {
    "color": "#E7E4E0",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.108.1",
    "node": ">=22.21.1"
  },
  "extensionKind": [
    "workspace"
  ],
  "api": "none",
  "capabilities": {
    "virtualWorkspaces": {
      "supported": false,
      "description": "GPG Bridge Request requires Unix domain socket creation via Node.js APIs, which are unavailable in browser-based virtual workspace extension hosts."
    },
    "untrustedWorkspaces": {
      "supported": false,
      "description": "GPG Bridge can silently perform cryptographic signing operations on behalf of workspace processes. It must not run in untrusted workspaces."
    }
  },
  "extensionDependencies": [
    "hidale.gpg-bridge-agent"
  ],
  "categories": [
    "Other"
  ],
  "keywords": [
    "gpg",
    "gnupg",
    "bridge",
    "assuan",
    "git-signing",
    "gpg4win"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gpg-bridge-request.start",
        "title": "GPG Bridge Request: Start"
      },
      {
        "command": "gpg-bridge-request.stop",
        "title": "GPG Bridge Request: Stop"
      },
      {
        "command": "gpg-bridge-request.syncPublicKeys",
        "title": "GPG Bridge Request: Sync public keys"
      }
    ],
    "configuration": {
      "title": "GPG Bridge Request",
      "properties": {
        "gpgBridgeRequest.debugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for troubleshooting"
        },
        "gpgBridgeRequest.autoSyncPublicKeys": {
          "default": "",
          "markdownDescription": "Automatically sync public keys from the local keyring on extension activation.\n\n| Value | Effect |\n|---|---|\n| *(empty string or empty array)* | Disabled — no auto-sync |\n| `\"all\"` | Export all public keys from the local keyring |\n| `\"pairs\"` | Export only public keys from matching key pairs |\n| `[\"uid1\", \"uid2\", ...]` | Export the specified keys (fingerprints, emails, UIDs, etc.) |",
          "oneOf": [
            {
              "type": "string",
              "enum": [
                "",
                "all",
                "pairs"
              ],
              "enumDescriptions": [
                "Disabled — no auto-sync on activation",
                "Export all public keys",
                "Export only public keys from matching key pairs"
              ]
            },
            {
              "type": "array",
              "items": {
                "type": "string"
              },
              "markdownDescription": "List of key identifiers to export (fingerprints, emails, UIDs)"
            }
          ]
        }
      }
    }
  },
  "vsce": {
    "baseImagesUrl": "https://github.com/diablodale/gpg-bridge/raw/HEAD/gpg-bridge-request/",
    "baseContentUrl": "https://github.com/diablodale/gpg-bridge/blob/HEAD/gpg-bridge-request/"
  },
  "scripts": {
    "vscode:prepublish": "npm run check-types && node esbuild.js --production",
    "compile": "tsc --build",
    "compile:integration": "tsc --build tsconfig.test.json",
    "check-types": "tsc --noEmit",
    "watch": "tsc --build --watch",
    "pretest": "npm run compile && npm run lint",
    "pretest:integration": "npm run compile:integration && npm run lint:integration",
    "lint": "eslint src",
    "lint:integration": "eslint src",
    "test": "vscode-test",
    "test:integration": "npm run test:integration:request-proxy && npm run test:integration:gpg-cli",
    "test:integration:request-proxy": "node out/test/integration/requestProxyRunTest.js",
    "test:integration:gpg-cli": "node out/test/integration/gpgCliRunTest.js",
    "vsix": "vsce package"
  },
  "devDependencies": {
    "@gpg-bridge/shared": "file:../shared",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.x",
    "@types/uuid": "^10.0.0",
    "uuid": "^9.0.1",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "chai": "^4.5.0",
    "esbuild": "^0.27.3",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10",
    "glob": "^13.0.1",
    "mocha": "^10.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  }
}
