{
  "name": "gpg-bridge-agent",
  "displayName": "GPG Bridge Agent",
  "description": "Windows agent proxy component for GPG Bridge",
  "version": "0.2.0",
  "icon": "icon.png",
  "preview": true,
  "publisher": "hidale",
  "author": {
    "name": "Dale Phurrough"
  },
  "license": "MIT",
  "homepage": "https://github.com/diablodale/gpg-bridge",
  "repository": {
    "type": "git",
    "url": "https://github.com/diablodale/gpg-bridge.git"
  },
  "qna": false,
  "bugs": {
    "url": "https://github.com/diablodale/gpg-bridge/issues"
  },
  "galleryBanner": {
    "color": "#E7E4E0",
    "theme": "light"
  },
  "engines": {
    "vscode": "^1.108.1",
    "node": ">=22.21.1"
  },
  "extensionKind": [
    "ui"
  ],
  "api": "none",
  "capabilities": {
    "virtualWorkspaces": {
      "supported": false,
      "description": "GPG Bridge requires direct filesystem access to GPG socket files and Gpg4win binaries. Virtual workspaces are not supported."
    },
    "untrustedWorkspaces": {
      "supported": false,
      "description": "GPG Bridge can silently perform cryptographic signing operations on behalf of workspace processes. It must not run in untrusted workspaces."
    }
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "gpg",
    "gnupg",
    "bridge",
    "assuan",
    "git-signing",
    "gpg4win"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gpg-bridge-agent.start",
        "title": "GPG Bridge Agent: Start"
      },
      {
        "command": "gpg-bridge-agent.stop",
        "title": "GPG Bridge Agent: Stop"
      },
      {
        "command": "gpg-bridge-agent.showStatus",
        "title": "GPG Bridge Agent: Show Status"
      }
    ],
    "configuration": {
      "title": "GPG Bridge Agent",
      "properties": {
        "gpgBridgeAgent.gpgBinDir": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to the GnuPG `bin` directory containing `gpgconf` (e.g. Gpg4win's `C:\\Program Files\\GnuPG\\bin`). Leave empty to auto-detect.",
          "scope": "resource"
        },
        "gpgBridgeAgent.debugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for troubleshooting"
        }
      }
    }
  },
  "vsce": {
    "baseImagesUrl": "https://github.com/diablodale/gpg-bridge/raw/HEAD/gpg-bridge-agent/",
    "baseContentUrl": "https://github.com/diablodale/gpg-bridge/blob/HEAD/gpg-bridge-agent/"
  },
  "scripts": {
    "vscode:prepublish": "npm run check-types && node esbuild.js --production",
    "compile": "tsc --build",
    "compile:integration": "tsc --build tsconfig.test.json",
    "check-types": "tsc --noEmit",
    "watch": "tsc --build --watch",
    "pretest": "npm run compile && npm run lint",
    "pretest:integration": "npm run compile:integration && npm run lint:integration",
    "lint": "eslint src",
    "lint:integration": "eslint src",
    "test": "vscode-test",
    "test:integration": "node out/test/integration/runTest.js",
    "vsix": "vsce package"
  },
  "devDependencies": {
    "@gpg-bridge/shared": "file:../shared",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.x",
    "@types/uuid": "^10.0.0",
    "uuid": "^9.0.1",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "chai": "^4.5.0",
    "esbuild": "^0.27.3",
    "eslint": "^9.39.2",
    "glob": "^13.0.1",
    "mocha": "^10.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
